<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07faf2"
    tools:context=".SecondFragment"
    android:padding="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/screen2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Jslide2"
        android:textSize="26sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/brandon_grotesque_bold_italic"
        android:gravity="center"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/slide2"
        android:fontFamily="@font/brandon_grotesque_regular_italic"
        android:layout_marginTop="30dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/slideTwoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:layout_weight="1"
            android:fontFamily="@font/brandon_grotesque_medium_italic"
            android:textSize="25sp"
            android:layout_gravity="bottom|start"
            android:gravity="bottom|start"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/slideTwoNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanjut"
            android:layout_weight="1"
            android:fontFamily="@font/brandon_grotesque_medium_italic"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            android:textSize="25sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>