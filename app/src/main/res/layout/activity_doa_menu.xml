<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout2"
    android:layout_height="match_parent"
    tools:context=".doa_menu">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view_doa"
        app:headerLayout="@layout/header_dashboard"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/doa_toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/menu" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/doa_toolbar">

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mari berdo'a"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/brandon_grotesque_black"/>

                <RelativeLayout
                    android:id="@+id/doa1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    android:background="#327fa8"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:text="Doa Sebelum Tidur"
                        android:textSize="30sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:padding="10dp"
                        android:text="Baca Ini Jika Hendak Tidur" />

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="-2dp"
                        android:layout_marginBottom="-2dp"
                        android:src="@drawable/doa_1"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doa2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    android:background="#328ba8">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/doa_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/baloo"
                        android:padding="10dp"
                        android:text="Doa Bangun Tidur"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:padding="10dp"
                        android:text="Baca Ini Jika Hendak \nBangun Tidur"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doa3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    android:background="#48bbe0">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:text="Doa Masuk WC"
                        android:textSize="30sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:padding="10dp"
                        android:text="Baca Ini Jika Ingin \nMasuk Kamar Mandi" />
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/doa_3"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doa4"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    android:background="#2fd0f5">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/doa_4"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:text="Doa Keluar WC"
                        android:layout_alignParentRight="true"
                        android:textSize="30sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:text="Baca Ini Jika Hendak \nKeluar Kamar Mandi" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/doa5"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="20dp"
                    android:background="#1db0d1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:text="Doa Ketika Bercermin"
                        android:textSize="25sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:padding="10dp"
                        android:text="Baca Ini Jika Hendak Bercermin" />
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/doa_5"/>
                </RelativeLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>